// Soubor: backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js" // Toto je standard
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  role   String  @default("ADMIN")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  description String?
  price     Float
  imageUrl  String?
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}